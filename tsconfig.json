{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "dist",
    "experimentalDecorators": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts"
  ]
}
